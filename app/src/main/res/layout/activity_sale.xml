<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/topLayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:constraint_referenced_ids="informationText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/informationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="InformationText"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/topLayer"
        app:layout_constraintLeft_toLeftOf="@id/topLayer"
        />

    <TextView
        android:id="@+id/Product_ID_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product ID"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/middleLeftLayer"
        app:layout_constraintTop_toTopOf="@+id/middleLeftLayer"
        />

    <TextView
        android:id="@+id/Product_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/middleLeftLayer"
        app:layout_constraintTop_toBottomOf="@id/Product_ID_text"
        />

    <TextView
        android:id="@+id/Price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/middleLeftLayer"
        app:layout_constraintTop_toBottomOf="@id/Product_name_text"
        />

    <TextView
        android:id="@+id/VAT_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VatRate"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/middleLeftLayer"
        app:layout_constraintTop_toBottomOf="@id/Price_text"
        />

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/middleLeftLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:constraint_referenced_ids="Product_ID_text,Product_name_text,Price_text,VAT_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayer" />

    <EditText
        android:id="@+id/productid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="25dp"
        android:inputType="number"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/Product_ID_text"
        app:layout_constraintBaseline_toBaselineOf="@id/Product_ID_text"
        />
    <EditText
        android:id="@+id/Product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="25dp"
        android:inputType="text"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/Product_name_text"
        app:layout_constraintBaseline_toBaselineOf="@id/Product_name_text"
        />
    <EditText
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="25dp"
        android:inputType="numberDecimal"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/Price_text"
        app:layout_constraintBaseline_toBaselineOf="@id/Price_text"
        />
    <EditText
        android:id="@+id/VAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="25dp"
        android:inputType="text"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/VAT_text"
        app:layout_constraintBaseline_toBaselineOf="@id/VAT_text"
        />

    <Button
        android:id="@+id/cancelBUtton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/VAT"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:onClick="addClick"
        android:text="Add"
        app:layout_constraintLeft_toRightOf="@id/cancelBUtton"
        app:layout_constraintTop_toBottomOf="@id/VAT" />

    <Button
        android:id="@+id/payButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:onClick="payClick"
        android:text="Pay"
        app:layout_constraintLeft_toRightOf="@id/addButton"
        app:layout_constraintTop_toBottomOf="@id/VAT" />

</androidx.constraintlayout.widget.ConstraintLayout>
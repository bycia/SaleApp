<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="175dp"
        android:layout_height="49dp"
        android:layout_margin="20dp"
        android:text="Cancel Payment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CashButton"
        android:layout_width="175dp"
        android:layout_height="49dp"
        android:layout_margin="20dp"
        android:text="Cash Payment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancelButton" />

    <Button
        android:id="@+id/CreditButton"
        android:layout_width="175dp"
        android:layout_height="49dp"
        android:layout_margin="20dp"
        android:text="Credit Payment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CashButton" />

    <Button
        android:id="@+id/QRButton"
        android:layout_width="175dp"
        android:layout_height="49dp"
        android:layout_margin="20dp"
        android:text="QR Payment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CreditButton" />

</androidx.constraintlayout.widget.ConstraintLayout>